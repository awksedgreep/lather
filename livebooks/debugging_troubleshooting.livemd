## Live Debugging Session

Let's create a live debugging session that walks through diagnosing a real SOAP service:

```elixir
defmodule LiveDebuggingSession do
  def debug_soap_service(url) do
    IO.puts("üîç LIVE DEBUGGING SESSION")
    IO.puts("=" |> String.duplicate(60))
    IO.puts("Service URL: #{url}")
    IO.puts("")

    # Step 1: Basic connectivity
    step_1_connectivity(url)

    # Step 2: WSDL analysis
    step_2_wsdl_analysis(url)

    # Step 3: Operation testing
    step_3_operation_testing(url)
  end

  defp step_1_connectivity(url) do
    IO.puts("üåê STEP 1: Testing Basic Connectivity")
    IO.puts("-" |> String.duplicate(40))

    # URL validation
    with :ok <- Lather.Http.Transport.validate_url(url) do
      IO.puts("‚úÖ URL format is valid")

      # HTTP connectivity test
      case Lather.Http.Transport.post(url, "", timeout: 10_000) do
        {:ok, %{status: status}} when status in 200..299 ->
          IO.puts("‚úÖ HTTP connectivity successful (#{status})")
          IO.puts("")
          :ok

        {:ok, %{status: status, body: body}} ->
          IO.puts("‚ö†Ô∏è HTTP error #{status}")
          IO.puts("Response: #{String.slice(body, 0, 200)}...")
          IO.puts("")
          {:error, :http_error}

        {:error, error} ->
          IO.puts("‚ùå Connection failed: #{Lather.Error.format_error(error)}")

          # Provide specific guidance
          case error do
            %{type: :transport_error, reason: :nxdomain} ->
              IO.puts("üí° DNS resolution failed - check the hostname")

            %{type: :transport_error, reason: :timeout} ->
              IO.puts("üí° Connection timeout - check network connectivity")

            %{type: :http_error, status: 404} ->
              IO.puts("üí° WSDL not found - verify the URL path")

            _ ->
              IO.puts("üí° Check network settings and service availability")
          end

          IO.puts("")
          {:error, error}
      end
    else
      {:error, :invalid_url} ->
        IO.puts("‚ùå Invalid URL format")
        IO.puts("")
        {:error, :invalid_url}
    end
  end

  defp step_2_wsdl_analysis(url) do
    IO.puts("üìã STEP 2: WSDL Analysis")
    IO.puts("-" |> String.duplicate(40))

    case Lather.DynamicClient.new(url, timeout: 30_000) do
      {:ok, client} ->
        IO.puts("‚úÖ WSDL parsed successfully")

        # Show service info
        operations = Lather.DynamicClient.list_operations(client)
        IO.puts("üìä Service Statistics:")
        IO.puts("   Operations: #{length(operations)}")

        # Store client for next step
        Process.put(:debug_client, client)

        # Show first few operations
        IO.puts("   Available operations:")
        operations
        |> Enum.take(5)
        |> Enum.each(fn op -> IO.puts("   ‚Ä¢ #{op}") end)

        if length(operations) > 5 do
          IO.puts("   ... and #{length(operations) - 5} more")
        end

      {:error, error} ->
        IO.puts("‚ùå WSDL analysis failed: #{Lather.Error.format_error(error)}")

        case error do
          %{type: :wsdl_error} ->
            IO.puts("üí° WSDL parsing error - check WSDL syntax and structure")

          %{type: :http_error} ->
            IO.puts("üí° HTTP error accessing WSDL - check URL and service status")

          _ ->
            IO.puts("üí° Check WSDL accessibility and format")
        end
    end

    IO.puts("")
  end

  defp step_3_operation_testing(url) do
    IO.puts("üß™ STEP 3: Operation Testing")
    IO.puts("-" |> String.duplicate(40))

    client = Process.get(:debug_client)

    if client do
      operations = Lather.DynamicClient.list_operations(client)

      # Test first operation
      if length(operations) > 0 do
        test_operation = hd(operations)
        IO.puts("Testing operation: #{test_operation}")

        case Lather.DynamicClient.get_operation_info(client, test_operation) do
          {:ok, op_info} ->
            IO.puts("‚úÖ Operation info retrieved")
            IO.puts("   Input parameters: #{length(op_info.input_parts)}")
            IO.puts("   Output parameters: #{length(op_info.output_parts)}")

            # Show parameter details
            if length(op_info.input_parts) > 0 do
              IO.puts("   Required parameters:")
              Enum.each(op_info.input_parts, fn part ->
                required = if part.required, do: "*", else: ""
                IO.puts("   ‚Ä¢ #{part.name}#{required}: #{part.type}")
              end)
            end

          {:error, error} ->
            IO.puts("‚ùå Failed to get operation info: #{inspect(error)}")
        end
      else
        IO.puts("‚ö†Ô∏è No operations found in WSDL")
      end
    else
      IO.puts("‚ö†Ô∏è No client available - WSDL analysis failed")
    end

    IO.puts("")
    IO.puts("üéØ DEBUGGING COMPLETE")
  end
end

